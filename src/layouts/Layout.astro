---
interface Props {
    title: string;
    descriptive_title: string;
    description: string;
}

const { title, descriptive_title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="utf-8" />
        <meta
            name="keywords"
            content="Inby, Inbypage, Inbydev, Infi, Aliceki, Inbydev Portafolio, Inbydev Portfolio, Inbydev PÃ¡ginas webs, Inbydev Websites, InNotesBy, Sobre inbydev"
        />
        <meta name="description" content={description} />
        <meta name="author" content="Inbydev" />
        <meta name="robots" content="index, follow" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="theme-color" content="#896db7" />
        <meta name="generator" content={Astro.generator} />
        <meta property="og:title" content={descriptive_title} />
        <meta property="og:description" content={description} />
        <link rel="icon" href="/favicon.ico" />
        <title>{title}</title>
    </head>
    <body>
        <slot name="Background" />

        <slot />
    </body>
</html>

<style is:global>
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    @font-face {
        font-family: "DotoRoundedBlack";
        src:
            url("/src/fonts/Doto_Rounded-Black.woff2") format("woff2"),
            url("/src/fonts/Doto_Rounded-Black.ttf") format("truetype");
        font-weight: 900;
        font-style: normal;
        font-display: swap;
    }

    @font-face {
        font-family: "FleurDeLeah";
        src:
            url("/src/fonts/FleurDeLeah-Regular.woff2") format("woff2"),
            url("/src/fonts/FleurDeLeah-Regular.ttf") format("truetype");
        font-style: normal;
        font-weight: 100;
        font-display: swap;
    }

    :root {
        --primary-text: #f1d7fd;
        --secondary-text: #cd7af7;
        --tertiary-text: #fb1e4c;
        --hover: #6a238a;

        --background: rgb(24, 2, 34);
        --background-header: rgb(18, 0, 28);

        --a-s: 0.5s;
        --h-s: 0.3s;
        --f-h-s: 0.2s;
        --font: "DotoRoundedBlack", arial;
    }

    ul,
    li,
    a {
        text-decoration: none;
    }

    body {
        background: var(--background);
        font-family: var(--font);
    }

    html {
        scrollbar-color: var(--primary-text);
        scrollbar-width: thin;
        scroll-behavior: smooth;
        color: var(--primary-text);
    }

    .home {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    h1,
    h2,
    h3,
    h4,
    span {
        color: var(--primary-text);
        line-height: normal;
        text-align: center;
    }

    h2,
    h3,
    h4,
    p,
    span {
        text-shadow: -4px 2.8px 2px rgba(0, 0, 0, 1);
    }

    p {
        color: var(--primary-text);
    }

    h2 {
        font-size: clamp(100% - 20px, 11.5vw, 50px);
        text-wrap: pretty;
    }

    h3 {
        font-size: clamp(100% - 20px, 11.5vw, 34px);
    }

    h4 {
        font-size: clamp(100% - 16px, 11.5vw, 28px);
    }

    p {
        font-size: clamp(1.125rem, 7svw, 2rem);
        line-height: clamp(1.5rem, 7svw, 2.5rem);
    }

    .full-section {
        display: grid;
        place-items: center;
        align-items: center;
        align-content: center;
        height: 100svh;
    }

    section[id] {
        scroll-margin-top: 16dvh;
    }

    @media (prefers-reduced-motion) {
        .detector {
            transition: none;
        }
    }
</style>
